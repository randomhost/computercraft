-- vim: tabstop=4 expandtab shiftwidth=4 softtabstop=4 syntax=lua
--
-- Controls a passively cooled Big Reactors reactor
--
-- (c) 2022, Random-Host.tv

-- load localization API
os.loadAPI('api/l10n')
l10n.setLanguage('en')

-- load Big Reactors control API
os.loadAPI('api/reactor')

-- configuration
reactor.setMonitorName('top')
reactor.setReactorName('BigReactors-Reactor_0')
reactor.setEnableRedstoneControl(false)
reactor.setOperationMode('manual')

-- run program
reactor.run()
